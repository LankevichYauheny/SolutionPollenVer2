                            <Button BorderThickness="0" Background="White" Height="40" Width="40" Margin="0 0 10 0">
                                <Image Source="C:/Users/User/Desktop/histogram.png"/>
                            </Button>
                            <Button BorderThickness="0" Background="White" Height="40" Width="40" Margin="0 0 10 0">
                                <Image Width="25" Height="25" Source="C:/Users/User/Desktop/settings.png"/>
                            </Button>
                        </StackPanel>
