                                    <DataGridTextColumn.HeaderTemplate>
                                        <HierarchicalDataTemplate>
                                            <TextBlock TextWrapping="Wrap">размер пыльцевого зерна в полярном положении</TextBlock>
                                        </HierarchicalDataTemplate>
