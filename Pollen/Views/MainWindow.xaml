                                <MenuItem Foreground="Black" Header="Редактирование записей в БД"></MenuItem>
                                <MenuItem Foreground="Black" Command="{Binding DelItemCommand}" Header="Удаление записей из БД"></MenuItem>
                            </MenuItem>
                        </Menu>
