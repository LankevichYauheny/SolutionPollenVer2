                                    <DataGridTextColumn.HeaderTemplate>
                                        <HierarchicalDataTemplate>
                                            <TextBlock TextWrapping="Wrap">размер пыльцевого зерна в экваториальном положении</TextBlock>
                                        </HierarchicalDataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                </DataGridTextColumn>
                                <DataGridTextColumn MinWidth="100" Width="155">
                                    <DataGridTextColumn.Binding>
                                        <MultiBinding StringFormat="{}{0} - {1}">
                                            <Binding Path="ExinePolarMinThickness"/>
                                            <Binding Path="ExinePolarMaxThickness"/>
