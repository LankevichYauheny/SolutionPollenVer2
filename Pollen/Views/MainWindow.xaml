                                        <HierarchicalDataTemplate>
                                            <TextBlock TextWrapping="Wrap">форма пыльцевого зерна в полярном положении</TextBlock>
                                        </HierarchicalDataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                </DataGridTextColumn>
                                <DataGridTextColumn Binding="{Binding EquatorialGrainShapes, Converter = {StaticResource collectionToStringConverter}}" MinWidth="140" Width="160">
                                    <DataGridTextColumn.HeaderTemplate>
                                        <HierarchicalDataTemplate>
                                            <TextBlock TextWrapping="Wrap">форма пыльцевого зерна в экваториальном положении</TextBlock>
                                        </HierarchicalDataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                </DataGridTextColumn>
                                <DataGridTextColumn MinWidth="100" Width="160">
                                    <DataGridTextColumn.Binding>
                                        <MultiBinding StringFormat="{}{0} - {1}">
                                            <Binding Path="PollenPolarMinSize"/>
                                            <Binding Path="PollenPolarMinSize"/>
