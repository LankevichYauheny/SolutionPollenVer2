                                                    <DataTemplate >
                                                        <TextBlock Text="{Binding ColorName}"/>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </Grid>
                                    </Border >
                                </DataTemplate>
                            </DataGrid.RowDetailsTemplate>
