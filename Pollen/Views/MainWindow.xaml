        <TabControl>
            <TabItem IsSelected="True">
                <TabItem.Header>
                    <StackPanel >
                        <Image Source="../Resources/tree.png" Height="30"/>
                        <TextBlock Text="ДРЕВЕСНЫЕ" HorizontalAlignment="Center" FontSize="12"></TextBlock>
