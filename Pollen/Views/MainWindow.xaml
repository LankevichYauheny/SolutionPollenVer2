                                    <DataGridTextColumn.HeaderTemplate>
                                        <HierarchicalDataTemplate>
                                            <TextBlock TextWrapping="Wrap">толщина экзины в полярном положении</TextBlock>
                                        </HierarchicalDataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                </DataGridTextColumn>
                                <DataGridTextColumn MinWidth="140" Width="155">
